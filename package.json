{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:api:dev": "nest start api --watch",
    "start:api:debug": "nest start api --debug --watch",
    "start:api:prod": "npx dotenv -e .env.production -- node dist/apps/api/main",
    "start:storage:dev": "nest start storage --watch",
    "start:storage:debug": "nest start storage --debug --watch",
    "start:storage:prod": "npx dotenv -e .env.production -- node dist/apps/storage/main",
    "start:email-notifier:dev": "nest start email-notifier --watch",
    "start:email-notifier:debug": "nest start email-notifier --debug --watch",
    "start:email-notifier:prod": "npx dotenv -e .env.production -- node dist/apps/email-notifier/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "schema:generate": "npx dotenv -- npx prisma generate --schema ./libs/db/prisma/schema.prisma",
    "migrate:dev": "npx dotenv -- npx prisma migrate dev --schema ./libs/db/prisma/schema.prisma",
    "migrate:prod": "npx dotenv -e .env.production -- npx prisma migrate deploy --schema ./libs/db/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.3",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/swagger": "^7.4.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.19.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "aws-sdk": "^2.1691.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^3.6.0",
    "ejs": "^3.1.10",
    "handlebars": "^4.7.8",
    "kafkajs": "^2.2.4",
    "nestjs-telegraf": "^2.8.1",
    "nodemailer": "^6.9.15",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.649.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.19.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/db(|/.*)$": "<rootDir>/libs/db/src/$1"
    }
  }
}
