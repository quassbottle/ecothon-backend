{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": ["templates/**/*", "mail/templates/**/*"],
    "watchAssets": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "email-notifier": {
      "type": "application",
      "root": "apps/email-notifier",
      "entryFile": "main",
      "sourceRoot": "apps/email-notifier/src",
      "compilerOptions": {
        "tsConfigPath": "apps/email-notifier/tsconfig.app.json"
      }
    },
    "telegram-notifier": {
      "type": "application",
      "root": "apps/telegram-notifier",
      "entryFile": "main",
      "sourceRoot": "apps/telegram-notifier/src",
      "compilerOptions": {
        "tsConfigPath": "apps/telegram-notifier/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "db": {
      "type": "library",
      "root": "libs/db",
      "entryFile": "index",
      "sourceRoot": "libs/db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db/tsconfig.lib.json"
      }
    },
    "storage": {
      "type": "application",
      "root": "apps/storage",
      "entryFile": "main",
      "sourceRoot": "apps/storage/src",
      "compilerOptions": {
        "tsConfigPath": "apps/storage/tsconfig.app.json"
      }
    }
  }
}